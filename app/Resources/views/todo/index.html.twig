{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="page-header text-center">Latest To Do</h2>
<table class="table table-striped table-hover table-dark">
    <thead>
    <tr>
        <th class="text-sm font-italic" scope="col">Priority</th>
        <th scope="col">To Do</th>
        <th scope="col">Due date</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    {% for todo in todos %}
    <tr>
        <th scope="row" class="">{{ todo.priority }}</th>
        <td class="font-italic">{{ todo.name }}</td>
        <td class="font-italic">{{ todo.dueDate|date('F j, Y, g:i a') }}</td>
        <td><a href="/todo/details/{{ todo.id }}" class="btn btn-success btn-sm">View</a>
            <a href="/todo/edit/{{ todo.id }}" class="btn btn-dark btn-sm">Edit</a>
            <a href="/todo/delete/{{ todo.id }}" class="btn btn-danger btn-sm">Delete</a></td>
    </tr>
{% endfor %}
    </tbody>
</table>
{% endblock %}